use strict;
use warnings;

my ($inerror);
my ($label, $txt);

while (<>) {
    if ($inerror) {
	$txt .= $1 if (m,"(.*)",);
	$inerror = 0 if m/},/;
	if (!$inerror) {
	    print "\@item $label\n";
	    print $txt, "\n\n";
	}
    } else {
	next unless m/{(SHISHI.*),/;
	next if $1 =~ m,SHISHI_OK,; # Handled separately.
	$inerror = 1;
	$label = $1;
	$txt = "";
    }
}
